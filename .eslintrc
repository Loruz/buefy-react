{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "env": {
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": 0,
    "jsx-quotes": 0,
    "react/jsx-boolean-value": 0,
    "react/jsx-indent": ["error", 4],
    "react/jsx-indent-props": ["error", 4],
    "react/self-closing-comp": ["error", {
      "component": true,
      "html": false
    }],
    "indent": ["error", 4, { "SwitchCase": 1 }]
  }
}
